{% block contenu %}

    <div class="banniere">
        <img id="banniere-large" src="{{ asset("assets/img/banniere.jpg") }}" alt="banniere"/>
        <img id="banniere-mobile" src="{{ asset("assets/img/banniere_m.jpg") }}" alt="banniere pour mobile"/>
