{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="row">
        {% if   app.session.get('role') is defined and  app.session.get('role') == 'ROLE_ADMIN' %}
            <h4 class="title-form text-center">Recapitulatifs des adultes inscrits</h4>
            <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Nom d'utilisateur</th>
                <th>Ville</th>
                <th>Adresse Mail</th>
                <th>Rang</th>
                <th>Téléphone</th>
            </tr>
            </thead>
            <tbody>
            {% for adulte in adultes if adultes is not empty %}
                <tr>
                    <td>{{ adulte.nom }}</td>
                    <td>{{ adulte.prenom }}</td>
                    <td>{{ adulte.username }}</td>
                    <td>{{ adulte.ville }} ({{ adulte.code_postal }})</td>
                    <td>{{ adulte.adresseMail }}</td>
                    <td>{{ adulte.role }}</td>
                    <td>{{ adulte.telephone }}</td>
                    <td>
                        <a href="{{ path('admin.edit', {id: adulte.idAdulte}) }}" class="button-edit-delete"><img class="icone-edit-delete shake" src="{{ asset('assets/img/edit.png') }}" title="Modifier l'adulte"/></a>
                        <a href="{{ path('admin.delete', {id: adulte.idAdulte}) }}" class="button-edit-delete"><img class="icone-edit-delete shake" src="{{ asset('assets/img/delete.png') }}" title="Supprimer l'adulte"/></a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
        <form action="{{ path('adulte.add')}}">
            <button class="button primary" name="ajoutAdulte"><span class="button-plus-right">Ajouter un adulte</span></button>
        </form>
        {% endif %}
    </div>
{% endblock %}

